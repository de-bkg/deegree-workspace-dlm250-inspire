<?xml version="1.0" encoding="UTF-8"?>
<Themes xmlns="http://www.deegree.org/themes/standard" xmlns:d="http://www.deegree.org/metadata/description" xmlns:s="http://www.deegree.org/metadata/spatial" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" configVersion="3.2.0" xsi:schemaLocation="http://www.deegree.org/themes/standard http://schemas.deegree.org/themes/3.2.0/themes.xsd">

  <!-- In order to reference layers, the theme configuration needs to know layer stores. 
       Thatâ€™s why the first thing we need to specify are the layer stores we intend to use: -->
  <LayerStoreId>tn-rail</LayerStoreId>

  <!-- the actual theme configuration -->
  <Theme>
    <!-- First, we have the choice to give the theme an identifier or not. 
         If it does not have an identifier, it will not be requestable in the service configuration -->
    <Identifier>TN.RailTransportNetwork</Identifier>
    <!-- Then we can specify the description and spatial metadata (only the Title element is mandatory here). -->
    <d:Title>TN.RailTransportNetwork</d:Title>

    <s:CRS>EPSG:4258 EPSG:4326 EPSG:3857 EPSG:3034 EPSG:3035 EPSG:31466 EPSG:31467 EPSG:31468 EPSG:31469 EPSG:2397 EPSG:2398 EPSG:2399 EPSG:25832 EPSG:25833 EPSG:32632 EPSG:32633 EPSG:3044 EPSG:3045 EPSG:4839</s:CRS>

    <!-- After that, we can add layers and subthemes as required to the theme: -->
    <Theme>
        <Identifier>TN.RailTransportNetwork.RailwayNode</Identifier>
        <d:Title>TN.RailTransportNetwork.RailwayNode</d:Title>
        <Layer>TN.RailTransportNetwork.RailwayNode</Layer>
    </Theme>
  </Theme>

</Themes>
